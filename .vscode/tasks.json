{
	"version": "2.0.0",
	"options": {
		"cwd": "${workspaceRoot}/fork_example/build"
	},
	"tasks": [
		{
			"label": "CmakeTask",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-DCMAKE_BUILD_TYPE=Debug",
				".."
			]
		},
		{
			"label": "MakeTask",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "make",
			"args": []
		},
		{
			"label": "BuildTask",
			"dependsOrder": "sequence", // 按列出的顺序执行任务依赖项
			"dependsOn":[
				"CmakeTask",
				"MakeTask"
			]
		}
	]
}